<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ShopeNest" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <!-- This applies a custom style to the ActionBar only -->
        <item name="actionBarTheme">@style/CustomActionBarStyle</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="CustomBottomBarStyle" parent="ThemeOverlay.Material3.BottomAppBar">
    <item name="android:textColorPrimary">@color/black</item>
        


    </style>

    <style name="CustomActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item> <!-- Title color -->
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">#FFF</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>

        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>